<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.themoviedatabase"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="22"
        android:targetSdkVersion="31" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_tmdb"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_tmdb_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.TheMovieDatabase" >
        <activity
            android:name="com.app.themoviedatabase.ui.favorites.FavoritesActivity"
            android:exported="false" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.home.HomeActivity" />
        </activity>
        <activity
            android:name="com.app.themoviedatabase.ui.home.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.TheMovieDatabase.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.themoviedatabase.ui.detail.tvshow.DetailTvShowActivity"
            android:exported="false"
            android:theme="@style/Theme.TheMovieDatabase.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.home.HomeActivity" />
        </activity>
        <activity
            android:name="com.app.themoviedatabase.ui.detail.movie.DetailMovieActivity"
            android:exported="false"
            android:label="@string/title_activity_detail"
            android:theme="@style/Theme.TheMovieDatabase.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.home.HomeActivity" />
        </activity>
        <activity
            android:name="com.app.themoviedatabase.ui.home.HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.TheMovieDatabase.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:directBootAware="true"
            android:exported="false" />
    </application>

</manifest>